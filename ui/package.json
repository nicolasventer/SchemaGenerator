{
	"name": "schema-generator",
	"type": "module",
	"scripts": {
		"envDev": "bun run _genClientEnv.ts",
		"envProd": "cross-env B_PROD=true bun run _genClientEnv.ts",
		"dev": "bunx --bun vite",
		"watch": "bun run envDev && nodemon -w src -e css,ts,tsx --exec bun run _build.ts",
		"buildDev": "bun run envDev && bun run _build",
		"buildProd": "bun run envProd && bun run _build",
		"build": "bun run buildDev",
		"preview": "serve -l 4173 ./dist",
		"deploy": "bun run _deploy.ts",
		"buildDeploy": "bun run buildProd && bun run deploy",
		"devhost": "bunx --bun vite --host",
		"devhttps": "cross-env USE_HTTPS=true npx vite",
		"devhttpshost": "cross-env USE_HTTPS=true npx vite --host",
		"_build": "vite build # bun run build is preferred",
		"_preview": "vite preview",
		"doc": "typedoc && cmd /c \"start docs/index.html\"",
		"lint": "eslint --ext .ts,tsx --ignore-path .gitignore .",
		"lintfix": "eslint --ext .ts,tsx --ignore-path .gitignore --fix ."
	},
	"devDependencies": {
		"@faker-js/faker": "9.2.0",
		"@types/bun": "1.1.12",
		"@types/dom-view-transitions": "1.0.5",
		"@types/node": "22.8.2",
		"@typescript-eslint/eslint-plugin": "8.12.1",
		"@zamiell/typedoc-plugin-not-exported": "0.3.0",
		"cross-env": "7.0.3",
		"dayjs": "1.11.13",
		"eslint": "8.57.0",
		"eslint-config-preact": "1.5.0",
		"jest": "29.7.0",
		"schema-generator-utils": "schema-generator-utils.tgz",
		"tslib": "2.8.0",
		"vite-plugin-arraybuffer": "0.0.8",
		"vite-plugin-mkcert": "1.17.6"
	},
	"dependencies": {
		"@mantine/core": "7.13.4",
		"@mantine/hooks": "7.13.4",
		"@preact/preset-vite": "2.9.1",
		"@preact/signals": "1.3.0",
		"clsx": "2.1.1",
		"jszip": "3.10.1",
		"lucide-react": "0.454.0",
		"monaco-editor": "0.52.0",
		"preact": "10.24.3",
		"react": "npm:@preact/compat",
		"react-dom": "npm:@preact/compat",
		"react-hot-toast": "2.4.1",
		"react-icons": "5.3.0",
		"react-json-view": "1.21.3"
	},
	"eslintConfig": {
		"extends": "preact"
	}
}
